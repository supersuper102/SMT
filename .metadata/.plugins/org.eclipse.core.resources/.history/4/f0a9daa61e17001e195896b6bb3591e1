<%@ page language="java" contentType="text/html; charset=UTF-8" pageEncoding="UTF-8" %>
<html>
<head>
    <title>채팅 화면</title>
    <style>
        /* CSS 스타일 작성 */
    </style>
</head>
<body>
    <div class="chat-box">
        <table>
            <tr id="tth">
                <td>채팅</td>
            </tr>
            <tr>
                <td>
                    <div class="message-list" id="messageList">
                        <p class="message-left">안녕하세요 궁금하신 내용을 물어보세요!</p>
                    </div>
                </td>
            </tr>
            <tr>
                <td>
                    <input type="text" class="message-input" id="messageInput" />
                    <button onclick="sendMessage()">전송</button>
                </td>
            </tr>
        </table>
    </div>

    <script>
        function sendMessage() {
            var messageInput = document.getElementById("messageInput");
            var messageList = document.getElementById("messageList");
            var message = messageInput.value;

            messageList.innerHTML += "<p class='message-right'>" + message + "</p>";

            // AJAX를 사용하여 서버로 메시지 전송 및 답변 받아오기
            var xhr = new XMLHttpRequest();
            xhr.open("GET", "${pageContext.request.contextPath}/chat/requestChat", true);
            xhr.setRequestHeader("Content-Type", "application/json");
            xhr.onreadystatechange = function () {
                if (xhr.readyState === 4 && xhr.status === 200) {
                    var response = JSON.parse(xhr.responseText);
                    var answer = response.answer;
                    messageList.innerHTML += "<p class='message-left'>" + answer + "</p>";
                }
            };
            var requestBody = JSON.stringify({ "message": message });
            xhr.send(requestBody);

            messageInput.value = "";
        }

        document.getElementById("messageInput").addEventListener("keyup", function (event) {
            if (event.keyCode === 13) {
                sendMessage();
            }
        });
    </script>
</body>
</html>
